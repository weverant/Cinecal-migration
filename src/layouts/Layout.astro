---
import '../styles/main.scss';

import Nav from '../components/Nav.vue';

export interface Props {
    title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang='fr'>
    <head>
        <meta charset='UTF-8' />
        <meta name='description' content='Astro description' />
        <meta name='viewport' content='width=device-width' />
        <link rel='icon' type='image/svg+xml' href='/favicon/favicon.ico' />
        <meta name='generator' content={Astro.generator} />
        <title>{title}</title>

        <link
            rel='apple-touch-icon'
            sizes='180x180'
            href='/favicon/apple-touch-icon.png'
        />
        <link
            rel='icon'
            type='image/png'
            sizes='32x32'
            href='/favicon/favicon-32x32.png'
        />
        <link
            rel='icon'
            type='image/png'
            sizes='16x16'
            href='/favicon/favicon-16x16.png'
        />
        <link rel='manifest' href='/favicon/site.webmanifest' />
        <link
            rel='mask-icon'
            href='/favicon/safari-pinned-tab.svg'
            color='#5bbad5'
        />
        <link rel='shortcut icon' href='/favicon/favicon.ico' />
        <meta name='msapplication-TileColor' content='#2d89ef' />
        <meta
            name='msapplication-config'
            content='/favicon/browserconfig.xml'
        />
        <meta name='theme-color' content='#ffffff' />
        <!-- Méta Google -->
        <meta
            name='title'
            content='Accueil | CineCal | Antoine Weverbergh | TFA | DWM 2018-19'
        />
        <meta
            name='description'
            content='CineCal est un calendrier qui met en avant un événement marquant lié au thème du cinéma depuis ses débuts, pour chaque jour de l’année.'
        />

        <!-- Métas Facebook Opengraph -->
        <meta
            property='og:title'
            content='Acceuil | CineCal | Antoine Weverbergh | TFA | DWM 2018-19'
        />
        <meta
            property='og:description'
            content='CineCal est un calendrier qui met en avant un événement marquant lié au thème du cinéma depuis ses débuts, pour chaque jour de l’année.'
        />
        <meta
            property='og:url'
            content='http://antoineweverbergh.be/projets/tfa/'
        />
        <meta property='og:type' content='website' />
    </head>
    <body>
        <Nav client:load />
        <div class='container'>
            <slot />
        </div>
    </body>
</html>
